<?xml version="1.0" encoding="utf-8"?><!-- Table Data Row -->
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="48dp"
    android:paddingBottom="8dp">

    <!-- Data: Patient ID -->
    <TextView
        android:id="@+id/patientId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:padding="8dp"
        android:text="P-9890200" />

    <!-- Data: Patient Name -->
    <TextView
        android:id="@+id/patientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:padding="8dp"
        android:text="Cedar Pete" />

    <!-- Data: Birthdate & Gender -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Birthdate Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Birthdate -->
            <TextView
                android:id="@+id/patientBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Nov, 1990" />

            <!-- Age (26yo) -->
            <TextView
                android:id="@+id/patientAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="(26yo)"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Gender -->
        <TextView
            android:id="@+id/patientGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />
    </LinearLayout>

    <!-- Data: Phone Number & Email -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/patientPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="087782326612" />

        <TextView
            android:id="@+id/patientEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cedar@gmail.com"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Data: Address -->
    <TextView
        android:id="@+id/patientAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="start"
        android:padding="8dp"
        android:text="Paradis Serpong City J12/8, West Summerland" />

    <!-- Data: Case -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="12dp">

        <!-- Badge TextView -->
        <TextView
            android:id="@+id/patientBadge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:gravity="center"
            android:text="+2"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:contentDescription="Edit"
            android:focusable="true"
            android:src="@drawable/ic_edit"
            app:tint="@color/black" />

        <!-- Delete Icon -->
        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="Delete"
            android:focusable="true"
            android:src="@drawable/ic_delete"
            app:tint="@color/black" />

    </LinearLayout>
</TableRow>
