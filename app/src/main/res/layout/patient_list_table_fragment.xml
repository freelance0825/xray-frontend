<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_dialog"
    android:backgroundTint="@color/white"
    tools:context=".ui.fragments.PatientListTableFragment">

    <!-- Filter Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filterSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Time Period -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Time period"
                    android:textColor="@android:color/darker_gray" />

                <Spinner
                    android:id="@+id/spinnerTimePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_opacity_70" />

            <!-- Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Status"
                    android:textColor="@android:color/darker_gray" />

                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_opacity_70" />

            <!-- Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Type"
                    android:textColor="@android:color/darker_gray" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_opacity_70" />

            <!-- Gender -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Gender"
                    android:textColor="@android:color/darker_gray" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_opacity_70" />

            <!-- Age (Now has spacing) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Age"
                    android:textColor="@android:color/darker_gray" />

                <Spinner
                    android:id="@+id/spinnerAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/filter_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_opacity_70"
        app:layout_constraintTop_toBottomOf="@id/filterSection" />

    <!-- Second Section (Buttons + Pagination) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/actionSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Left Section (Buttons) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenViewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/header_blue"
                    android:drawableLeft="@drawable/ic_viewer"
                    android:text="Open in viewer"
                    android:textAllCaps="false"
                    app:cornerRadius="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApplyTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/header_blue"
                    android:drawableLeft="@drawable/ic_tags"
                    android:text="Apply tags"
                    android:textAllCaps="false"
                    app:cornerRadius="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/header_blue"
                    android:drawableLeft="@drawable/ic_export"
                    android:text="Export"
                    android:textAllCaps="false"
                    app:cornerRadius="4dp" />
            </LinearLayout>

            <!-- Right Section (Pagination) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPagination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="1-10 of 20"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnPrevPage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Previous Page"
                    android:padding="12dp"
                    android:src="@drawable/ic_prev" />

                <ImageButton
                    android:id="@+id/btnNextPage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Next Page"
                    android:padding="12dp"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Table Section -->
    <TableLayout
        android:id="@+id/tableLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/actionSection">

        <!-- Table Header Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="48dp"
            android:paddingBottom="8dp">

            <!-- Header: Blank space to match the data checkbox row -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="" />

            <!-- Header: Case -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Case"
                android:textStyle="bold" />

            <!-- Header: Physician -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Physician"
                android:textStyle="bold" />

            <!-- Header: Patient -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Patient"
                android:textStyle="bold" />

            <!-- Header: Birthdate & Gender -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:text="Birthdate &amp; Gender"
                android:textStyle="bold" />

            <!-- Header: Last Update -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:text="Last Update"
                android:textStyle="bold" />

            <!-- Header: Status -->
            <TextView
                android:id="@+id/etStatus"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:text="Status"
                android:textStyle="bold" />

            <!-- Header: Type -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Type"
                android:textStyle="bold" />

            <!-- Header: Assessment -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="Assessments"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
