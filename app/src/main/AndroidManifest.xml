<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Thunderscopefrontend"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.report.ReportActivity"
            android:exported="false" />
        <activity
            android:name=".ui.slidesdetail.SlidesDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Thunderscopefrontend.Material3" />
        <activity
            android:name=".ui.slides.SlidesActivity"
            android:exported="false"
            android:theme="@style/Theme.Thunderscopefrontend.Material3" /> <!-- Main Activity - Forced Landscape Mode -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Thunderscopefrontend" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.Thunderscopefrontend.Material3" /> <!-- Sign Up Activity -->
        <activity
            android:name=".ui.casedashboard.CaseDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Thunderscopefrontend.Material3" /> <!-- PatientResponse List Activity -->
        <activity
            android:name=".ui.todolistdashboard.TodoListDashboardActivity"
            android:exported="true" /> <!-- To Do List Activity -->
        <activity
            android:name=".ui.createnewtest.CreateNewTestActivity"
            android:exported="true" /> <!-- Create New Test Activity -->
        <activity
            android:name=".ui.patientdashboard.PatientDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Thunderscopefrontend.Material3" /> <!-- PatientResponse Activity -->
        <activity
            android:name=".ui.patientreport.PatientReportActivity"
            android:exported="true" /> <!-- PatientReport Activity -->
        <activity
            android:name=".ui.patientarchive.PatientArchiveActivity"
            android:exported="true" /> <!-- PatientArchive Activity -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.thunderscope"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/img_paths" />
        </provider>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/pdf_paths" />
        </provider>
    </application>

</manifest>